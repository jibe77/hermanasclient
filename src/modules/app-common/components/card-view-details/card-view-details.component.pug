.card.text-white.mb-4(
    [ngClass]='background'
)
    ng-content(select='.card-body')
    .card-footer.d-flex.align-items-center.justify-content-between
        a(*ngIf='link === "retry"', href="javascript:void(0);" onclick="document.location.reload()").small.text-white.stretched-link
            span(i18n="@@retry") Retry
        a(*ngIf='link !== "retry"', [routerLink]='link').small.text-white.stretched-link
            span(i18n="@@viewDetails") View Details
        .small.text-white
            fa-icon([icon]='["fas", "angle-right"]')

li.nav-item.dropdown.dropdown-user.no-caret(
    ngbDropdown,
    placement='bottom-right',
    display='dynamic'
)
    a#userDropdown.nav-link.dropdown-toggle(
        ngbDropdownToggle,
        data-cy='userMenu',
        role='button',
        aria-haspopup='true',
        aria-expanded='false'
    )
        span(*ngIf="siteLanguage === 'English'" ).flag-icon.flag-icon-gb.flag-icon-squared
        span(*ngIf="siteLanguage === 'Fran√ßais'" ).flag-icon.flag-icon-fr.flag-icon-squared
    .dropdown-menu.dropdown-menu-right(
        ngbDropdownMenu,
        aria-labelledby='dropdownUser'
    )
        a.dropdown-item(href='/index.html?lang_redirect=en')
            span.flag-icon.flag-icon-gb.flag-icon-squared
            span {{' '}}
            span(i18n="@@english") English
        a.dropdown-item(href='/index.html?lang_redirect=fr')
            span.flag-icon.flag-icon-fr.flag-icon-squared
            span {{' '}}
            span(i18n="@@french") French
